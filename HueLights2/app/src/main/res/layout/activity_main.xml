<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="TURN ON"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="TURN OFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/brightnessSlider"
        android:layout_width="346dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:max="254"
        android:progress="127"
        app:layout_constraintEnd_toEndOf="@+id/buttonOff"
        app:layout_constraintStart_toStartOf="@+id/buttonOn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="223dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:autoSizeTextType="uniform"
        android:text="CONTROL THE BRIGHTNESS: "
        app:layout_constraintEnd_toEndOf="@+id/buttonOff"
        app:layout_constraintStart_toStartOf="@+id/buttonOn"
        app:layout_constraintTop_toBottomOf="@+id/buttonOn" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="346dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="@+id/buttonOff"
        app:layout_constraintStart_toStartOf="@+id/buttonOn"
        app:layout_constraintTop_toBottomOf="@+id/brightnessSlider" />

    <Button
        android:id="@+id/scheduleTurnOnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Schedule Turn On "
        app:layout_constraintStart_toStartOf="@+id/timePicker"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <Button
        android:id="@+id/scheduleTurnOffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Turn Off"
        app:layout_constraintEnd_toEndOf="@+id/timePicker"
        app:layout_constraintTop_toTopOf="@+id/scheduleTurnOnButton" />

    <ListView
        android:id="@+id/scheduleListView"
        android:layout_width="346dp"
        android:layout_height="198dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/scheduleTurnOffButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/scheduleTurnOnButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoSizeTextType="uniform"
        android:text="Click on the item from the list to remove it. ðŸ‘‡ðŸ‘‡ðŸ‘‡ðŸ‘‡"
        app:layout_constraintEnd_toEndOf="@+id/timePicker"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/timePicker"
        app:layout_constraintTop_toBottomOf="@+id/scheduleTurnOnButton" />

</androidx.constraintlayout.widget.ConstraintLayout>